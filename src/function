##Begin gitProject function
function gitProject {
      git clone $1 ./$2
    {
        echo "PORT=5000"
        echo "DB_USERNAME=AAINSTRUCTOR"
        echo "DB_PASSWORD=password"
        echo "DB_DATABASE=AASTUDENT"
        echo "DB_HOST=localhost"
        echo "JWT_SECRET=U3VwZXJEdXBlclNlY3JldA=="
        echo "JWT_EXPIRES_IN=604800"
    } > ./$2/backend/.env
    sed -i '/"scripts":/a \    "db:migrate": "dotenv sequelize-cli db:migrate",\n\    "db:migrate:undo:all": "dotenv sequelize-cli db:migrate:undo:all",\n\    "db:redo": "npm run db:seed:undo:all && npm run db:migrate:undo:all && npm run db:migrate && npm run db:seed:all", \n\    "db:seed:all": "dotenv sequelize-cli db:seed:all",\n\    "db:seed:undo:all": "dotenv sequelize-cli db:seed:undo:all",\n\    "db:drop": "dotenv sequelize-cli db:drop",\n\    "db:create": "dotenv sequelize-cli db:create", \n\    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed:all",' ./$2/backend/package.json
    # no way to specify prefix for npx commands, necessitating modifying package
    npm install ./$2/backend
    npm run db:reset --prefix ./$2/backend
    npm install ./$2/frontend
    code $2
}
##End gitProject function
